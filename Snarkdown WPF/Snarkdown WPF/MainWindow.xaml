<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Tree="clr-namespace:Aga.Controls.Tree;assembly=Aga.Controls"
        xmlns:local="clr-namespace:Snarkdown_WPF"
        x:Class="Snarkdown_WPF.MainWindow"
        Title="Snarkdown" Height="629.3" Width="746" Background="{DynamicResource appBg}" Icon="snarkdown Icon 3 copy.ico">
    <Window.Resources>
        <local:FileList x:Key="data" />
    </Window.Resources>
    <Grid x:Name="grid1">
        <Grid.RowDefinitions>
            <RowDefinition Height="124*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="509*"/>
            <ColumnDefinition Width="229*"/>
        </Grid.ColumnDefinitions>
        <Menu Height="21" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <StatusBar Grid.ColumnSpan="2" Grid.Row="1" Height="23" VerticalAlignment="Bottom"/>
        <TextBox x:Name="docview" TextWrapping="Wrap" Text="TextBox" SpellCheck.IsEnabled="True" Margin="10,49,10,10"/>
        <TextBox x:Name="metaview" TextWrapping="Wrap" Text="TextBox" Margin="10,49,10,10" Grid.Column="1"/>
        <WindowsFormsHost x:Name="wfhost" Grid.Row="1" Margin="10,34,0,28" Loaded="Window_Loaded" HorizontalAlignment="Left" Width="164"/>
        <GridSplitter Margin="0,21,-2,0" Width="4"/>
        <GridSplitter HorizontalAlignment="Stretch" Height="4" VerticalAlignment="Top" ResizeDirection="Rows" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Label Content="Document" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.577" Height="26" Width="65"/>
        <Label Content="Meta" Grid.Column="1" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top" Height="26" Width="37"/>
        <Label Content="Project" HorizontalAlignment="Left" Margin="10,9,0,0" Grid.Row="1" VerticalAlignment="Top"/>

        <Tree:TreeList x:Name="projectview" HorizontalAlignment="Left" Margin="10,30,0,0" Grid.Row="1" VerticalAlignment="Top" Height="160" Width="209" Grid.Column="1">
            <Tree:TreeList.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </Tree:TreeList.View>
        </Tree:TreeList>
        <DataGrid x:Name="datagrid" ItemsSource="{Binding Source={StaticResource data}}" HorizontalAlignment="Left" Margin="215,47,0,0" Grid.Row="1" VerticalAlignment="Top" Height="121" Width="272">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=fileName}" Header="Filename"/>
                <DataGridTextColumn Binding="{Binding Path=contents}" Header="Content"/>
                <DataGridTextColumn Binding="{Binding Path=meta}" Header="Meta"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
